{
  "scripts": {
    "db:check": "npm --prefix backend run db:check",
    "front:scan-selectors": "node scripts/analyze-front-selectors.js --write",
    "front:build:css": "cross-env NODE_ENV=production postcss frontend/style/css_home.css -o frontend/dist/app.css",
    "front:watch:css": "postcss frontend/style/css_home.css -o frontend/dist/app.css --watch",
    "front:lighthouse:mobile": "lhci autorun --config=./lighthouserc.mobile.json",
    "front:lighthouse:desktop": "lhci autorun --config=./lighthouserc.desktop.json"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@lhci/cli": "^0.14.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "cssnano": "^6.1.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "tailwindcss": "^4.1.16"
  }
}
